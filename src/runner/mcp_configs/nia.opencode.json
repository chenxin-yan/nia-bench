{
	"$schema": "https://opencode.ai/config.json",
	"agent": {
		"coder": {
			"model": "$MODEL",
			"maxTokens": 16000
		},
		"task": {
			"model": "$MODEL",
			"maxTokens": 16000
		},
		"title": {
			"model": "$MODEL",
			"maxTokens": 80
		},
		"summarizer": {
			"model": "$MODEL",
			"maxTokens": 5000
		}
	},
	"skills": {
		"paths": ["$SKILLS_DIR"]
	},
	"permission": {
		"skill": {
			"*": "deny",
			"Nia": "allow"
		},
		"edit": "allow",
		"write": "allow",
		"bash": "allow"
	}
}
